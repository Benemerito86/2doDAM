<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="61.0" prefWidth="149.0" spacing="10" style="-fx-padding: 15; -fx-background-color: #f8f8f8;" stylesheets="@../css/calculadora.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.CalculadoraController">

   <!-- Parte superior: pantalla de resultados -->
   <TextField fx:id="display" editable="false" style="-fx-font-size: 24px; -fx-alignment: center-right; -fx-background-color: white;" text="0" VBox.vgrow="NEVER" />

   <!-- Parte inferior: botones -->
   <GridPane hgap="8" vgap="8" VBox.vgrow="ALWAYS">

      <!-- Fila 1 -->
      <Button fx:id="clearButton" onAction="#clear" text="C" GridPane.columnIndex="0" GridPane.rowIndex="0" />
      <Button fx:id="divideButton" onAction="#setOperator" prefHeight="43.0" prefWidth="175.0" text="/" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      <Button fx:id="multiplyButton" onAction="#setOperator" prefHeight="43.0" prefWidth="152.0" text="*" GridPane.columnIndex="2" GridPane.rowIndex="0" />
      <Button onAction="#setOperator" prefHeight="161.0" prefWidth="42.0" text="+" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.rowSpan="2" />

      <!-- Fila 2 -->
      <Button onAction="#appendNumber" text="7" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <Button onAction="#appendNumber" text="8" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Button onAction="#appendNumber" text="9" GridPane.columnIndex="2" GridPane.rowIndex="1" />

      <!-- Fila 3 -->
      <Button onAction="#appendNumber" text="4" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      <Button onAction="#appendNumber" text="5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button onAction="#appendNumber" text="6" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <Button onAction="#setOperator" prefHeight="43.0" prefWidth="113.0" text="-" GridPane.columnIndex="3" />

      <!-- Fila 4 -->
      <Button onAction="#appendNumber" text="1" GridPane.columnIndex="0" GridPane.rowIndex="3" />
      <Button onAction="#appendNumber" text="2" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Button onAction="#appendNumber" text="3" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <Button onAction="#calculate" prefHeight="164.0" prefWidth="42.0" text="=" GridPane.columnIndex="3" GridPane.rowIndex="3" GridPane.rowSpan="2" />

      <!-- Fila 5 -->
      <Button onAction="#appendNumber" prefHeight="43.0" prefWidth="273.0" text="0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />
      <Button onAction="#appendDecimal" text="." GridPane.columnIndex="2" GridPane.rowIndex="4" />

      <!-- Columnas y filas -->
      <columnConstraints>
         <ColumnConstraints hgrow="ALWAYS" />
         <ColumnConstraints hgrow="ALWAYS" />
         <ColumnConstraints hgrow="ALWAYS" />
         <ColumnConstraints hgrow="ALWAYS" />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints vgrow="ALWAYS" />
         <RowConstraints vgrow="ALWAYS" />
         <RowConstraints vgrow="ALWAYS" />
         <RowConstraints vgrow="ALWAYS" />
         <RowConstraints vgrow="ALWAYS" />
      </rowConstraints>

   </GridPane>
</VBox>
