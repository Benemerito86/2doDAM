<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.controller.MainController"
      alignment="CENTER" spacing="20" prefWidth="400" prefHeight="300"
      style="-fx-background-color: #f5f5f5; -fx-padding: 30;">

   <Text text="Menú de Aplicaciones" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

   <Button text="Calculadora" onAction="#launchCalculadora" prefWidth="200" />
   <Button text="Cálculo Mental" onAction="#launchCalculoMental" prefWidth="200" />
   <Button text="Sudoku" onAction="#launchSudoku" prefWidth="200" />
   <Button text="Salir" onAction="#exitApp" prefWidth="200"
           style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />

</VBox>