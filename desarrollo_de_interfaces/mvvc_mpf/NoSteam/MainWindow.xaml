<Window x:Class="NoSteam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoSteam"
        mc:Ignorable="d"
        Title="NoSteam" Height="517" Width="800">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/fondo.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!--BARRA SUPERIOR-->
        <Border Background="transparent" Grid.Row="0" Grid.ColumnSpan="3">
            <DockPanel Margin="15,0">
                <TextBlock Text="NoSteam"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           DockPanel.Dock="Left"
                           VerticalAlignment="Center"/>

                <!-- Botones de navegación -->
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Content="Inicio" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="Transparent"
                            Margin="10,0"/>
                    <Button Content="Biblioteca" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="Transparent"
                            Margin="10,0"/>
                    <Button Content="Carrito" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="Transparent"
                            Margin="10,0"/>
                    <Button Content="Perfil" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="Transparent"
                            Margin="10,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- 🔹 CONTENIDO PRINCIPAL -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled" Grid.ColumnSpan="3">

            <StackPanel Margin="20" Width="726">
                <TextBlock Text="Welcome to NoSteam" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,0,20"/>

                <Button Content="Comprar ya -->" 
                        Width="100" 
                        Height="30" 
                        Margin="0,0,0,20"/>

                <WrapPanel Margin="20">
                    <Border Width="150" Height="150" Background="White" Margin="10" CornerRadius="25">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.5" Direction="270"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="120"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Image Grid.Row="0"
                                   Source="/fondo.png"
                                   Margin="15,15,15,0"
                                   Stretch="UniformToFill"/>

                            <TextBlock Grid.Row="1"
                                       Text="Pokemon ZA - 69,99€"
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"
                                       FontWeight="Bold"
                                       Foreground="Black"/>

                        </Grid>
                    </Border>



                </WrapPanel>
            </StackPanel>

        </ScrollViewer>
        <Border Grid.Row="2" Grid.ColumnSpan="3" Background="LightCyan" Height="120"/>

    </Grid>
</Window>
