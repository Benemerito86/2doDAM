<Window x:Class="WpfAppNoSteam.AddJuego"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Añadir Juego - NoSteam"
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#0E1621">

    <Grid AllowDrop="True" Drop="Grid_Drop" DragOver="Grid_DragOver">
        <!-- Fondo -->
        <Grid.Background>
            <ImageBrush ImageSource="/fondo.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Capa semitransparente -->
        <Rectangle Fill="#AA000000"/>

        <!-- Contenido -->
        <Border Background="#1E1E1E" CornerRadius="20" Padding="25" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>

                <TextBlock Text="Añadir Nuevo Juego"
                           FontSize="24" FontWeight="Bold"
                           Foreground="#00FFAA"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Nombre -->
                <TextBlock Text="Nombre del juego:" Foreground="White" Margin="0,0,0,5"/>
                <TextBox x:Name="txtNombre" Height="32" Margin="0,0,0,15" Background="#2A2A2A" Foreground="White" BorderBrush="#00FFAA" BorderThickness="1"/>

                <!-- Precio -->
                <TextBlock Text="Precio (€):" Foreground="White" Margin="0,0,0,5"/>
                <TextBox x:Name="txtPrecio" Height="32" Margin="0,0,0,20" Background="#2A2A2A" Foreground="White" BorderBrush="#00FFAA" BorderThickness="1"/>

                <!-- Área de arrastre -->
                <Border x:Name="DropArea"
                        Height="120" Margin="0,0,0,20"
                        Background="#2A2A2A"
                        BorderBrush="#00FFAA"
                        BorderThickness="2"
                        CornerRadius="8"
                        VerticalAlignment="Top">
                    <TextBlock x:Name="DropText"
                               Text="Arrastra aquí una imagen PNG del juego"
                               Foreground="#AAAAAA"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </Border>

                <!-- Botón -->
                <Button Content="Añadir Juego"
                        Click="Add_Click"
                        Background="#00FFAA"
                        Foreground="Black"
                        FontWeight="Bold"
                        Height="40"
                        Margin="0,10"
                        BorderThickness="0"
                        Cursor="Hand"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>