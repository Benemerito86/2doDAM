<Window x:Class="WpfAppNoSteam.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppNoSteam"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" Height="450" Width="800">
    <Grid>
        <!-- Fondo -->
        <Grid.Background>
            <ImageBrush ImageSource="/fondo.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <!-- Capa semitransparente -->
        <Rectangle Fill="#AA000000"/>
        <!-- Contenido -->
        <Border Background="#1E1E1E" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">
            <StackPanel>
                <TextBlock Text="Cambiar Contraseña"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#00FFAA"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <!-- Nueva contraseña -->
                <TextBlock Text="Nueva Contraseña:" Foreground="White" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtNewPassword" Height="30" Margin="0,0,0,15"/>
                <!-- Confirmar nueva contraseña -->
                <TextBlock Text="Confirmar Nueva Contraseña:" Foreground="White" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtConfirmPassword" Height="30" Margin="0,0,0,20"/>
                <!-- Botón: Cambiar contraseña -->
                <Button x:Name="btnChangePassword"
                        Content="Cambiar Contraseña"
                        Height="35"
                        Background="#00FFAA"
                        Foreground="Black"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnChangePassword_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
