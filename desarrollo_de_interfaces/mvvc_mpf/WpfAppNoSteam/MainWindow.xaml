<Window x:Class="WpfAppNoSteam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppNoSteam"
        mc:Ignorable="d"
        Title="WpfAppNoSteam" Height="517" Width="800" WindowStartupLocation="CenterScreen">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/fondo.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!--BARRA SUPERIOR-->
        <Border Background="transparent" Grid.Row="0" Grid.ColumnSpan="3">
            <DockPanel Margin="15,0">
                <TextBlock Text="NoSteam"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           DockPanel.Dock="Left"
                           VerticalAlignment="Center"/>

                <!-- Botones de navegación -->
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Content="Inicio" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="Transparent"
                            Margin="10,0"/>
                    <Button Content="Biblioteca" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="Transparent"
                            Margin="10,0"/>
                    <Button Content="Carrito" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="Transparent"
                            Margin="10,0"
                            Click="ToCarrito"/>
                    <Button Content="Perfil" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="Transparent"
                            Margin="10,0"
                            Click="ToProfile"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- 🔹 CONTENIDO PRINCIPAL -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled" Grid.ColumnSpan="3">

            <StackPanel Margin="20" Width="800">
                <TextBlock Text="Welcome to NoSteam" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,0,20"/>

                <Button Content="Comprar ya -->" 
                        Width="100" 
                        Height="30" 
                        Margin="0,0,0,20"/>

                <ItemsControl x:Name="ListaJuegos" Margin="20">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Background="Transparent" BorderThickness="0" Click="Juego_Click" Tag="{Binding}">
                                <Border Width="150" Height="150" Background="White" Margin="10" CornerRadius="25">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.5" Direction="270"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="120"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Image Grid.Row="0"
                                           Source="/fondo.png"
                                           Margin="15,15,15,0"
                                           Stretch="UniformToFill"/>
                                        <TextBlock Grid.Row="1"
                                           Text="{Binding NombrePrecio}"
                                           VerticalAlignment="Bottom"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"
                                           FontWeight="Bold"
                                           Foreground="Black"/>
                                    </Grid>
                                </Border>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

        </ScrollViewer>
        <!-- 🔹 BARRA INFERIOR DECORATIVA -->
        <Border Grid.Row="2" Background="#1E1E1E" Opacity="0.95">
            <TextBlock Text="Panel de Usuarios"
                      Foreground="#00FFAA"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      FontStyle="Italic"
                      FontSize="13"/>
        </Border>
    </Grid>
</Window>

