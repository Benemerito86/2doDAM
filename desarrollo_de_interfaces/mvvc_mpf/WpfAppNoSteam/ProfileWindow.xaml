<Window x:Class="WpfAppNoSteam.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppNoSteam"
        mc:Ignorable="d"
        Title="ProfileWindow" Height="450" Width="800">
    <Grid>
        <!-- Fondo -->
        <Grid.Background>
            <ImageBrush ImageSource="/fondo.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Capa semitransparente -->
        <Rectangle Fill="#AA000000"/>

        <!-- Contenido -->
        <Border Background="#1E1E1E" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">
            <StackPanel>
                <TextBlock Text="Mi Perfil" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#00FFAA" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <!-- Email del usuario (se pasará desde Login/MainWindow) -->
                <TextBlock x:Name="txtEmailDisplay" 
                           Text="Cargando..." 
                           FontSize="16" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <!-- Botón: Cambiar contraseña -->
                <Button x:Name="btnCambiarPass" 
                        Content="Cambiar Contraseña" 
                        Height="35" 
                        Margin="0,0,0,15"
                        Background="#00FFAA" 
                        Foreground="Black" 
                        FontWeight="Bold" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Click="btnCambiarPass_Click"/>

                <!-- Botón: Cerrar sesión -->
                <Button x:Name="btnCerrarSesion" 
                        Content="Cerrar Sesión" 
                        Height="35" 
                        Background="#FF5555" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Click="btnCerrarSesion_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
